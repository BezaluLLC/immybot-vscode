// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile-web",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			
		},
		{
			"label": "browser-debug",
			"type": "npm",
			"script": "debug",
			"group": "build",
			"dependsOn": [
				"watch-web"
			],
			"isBackground": true,
			
			
		},
		{
			"label": "watch-web2",
			"type": "npm",
			"script": "watch-web",
			"isBackground": true,
			"runOptions": {
				"instanceLimit": 1,
				"reevaluateOnRerun": true
			},
			"problemMatcher": [
				"$ts-webpack-watch",
				"$tslint-webpack-watch"
			],
		}
	]
}