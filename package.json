{
	"name": "immybot",
	"displayName": "immybot",
	"description": "HelloWorld example for VS Code in the browser",
	"version": "0.0.1",
	"publisher": "ImmyBot",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/microsoft/vscode-extension-samples/immybot",
	"engines": {
		"vscode": "^1.74.0",
		"node": ">=16.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:powershell"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "metascript",
				"extensions": [
					".ps1",
					".psm1"
				]
			}
		],
		"views": {
			"explorer": [],
			"sideBarViewContainer": [
				{
					"id": "immybot-signin",
					"name": "Sign In",
					"when": "!immybot:authenticated"
				},
				{
					"id": "immybot-localrepo",
					"name": "⭐ MY SCRIPTS ⭐",
					"when": "immybot:authenticated"
				},
				{
					"id": "immybot-globalrepo",
					"name": "⭐ GLOBAL SCRIPTS ⭐",
					"when": "immybot:authenticated"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "immybot-signin",
				"contents": "Sign in to ImmyBot\n[Sign In](command:immybot.signIn)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "immybot.refresh",
					"when": "immybot:authenticated",
					"group": "navigation@1"
				},
				{
					"command": "immybot.save",
					"when": "immybot:authenticated && editorIsOpen",
					"group": "navigation@2"
				},
				{
					"command": "immybot.discard",
					"when": "immybot:authenticated && editorIsOpen",
					"group": "navigation@3"
				},
				{
					"command": "immybot.createFile",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@1"
				},
				{
					"command": "immybot.createFile",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@1"
				},
				{
					"command": "immybot.deleteFile",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@2"
				},
				{
					"command": "immybot.deleteFile",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@2"
				},
				{
					"command": "immybot.signOut",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@3"
				},
				{
					"command": "immybot.signOut",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@3"
				}				
			],
			"commandPalette": [
				{
					"command": "memfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.addFile",
					"when": "workbenchState == workspace"
				}
			]
		},
		"commands": [
			{
				"command": "immybot.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "immybot.signIn",
				"title": "Sign In"
			},
			{
				"command": "immybot.signOut",
				"title": "Sign Out",
				"icon": "$(sign-out)"
			},
			{
				"command": "immybot.refresh",
				"title": "Refresh Scripts",
				"icon": "$(refresh)"
			},
			{
				"command": "immybot.save",
				"title": "Save",
				"icon": "$(save)"
			},
			{
				"command": "immybot.discard",
				"title": "Discard Changes",
				"icon": "$(discard)"
			},
			{
				"command": "immybot.createFile",
				"title": "Create File",
				"icon": "$(add)"
			},
			{
				"command": "immybot.deleteFile",
				"title": "Delete File",
				"icon": "$(trash)"
			},
			{
				"command": "memfs.reset",
				"title": "Delete Files",
				"category": "MemFS"
			},
			{
				"command": "memfs.deleteFile",
				"title": "Delete \"file.txt\"",
				"category": "MemFS"
			},
			{
				"command": "memfs.addFile",
				"title": "Add \"file.txt\"",
				"category": "MemFS"
			}
		],
		"viewsContainers": {
			"panel": [
				{
					"id": "console-view-container",
					"title": "ImmyBot",
					"icon": "immybot.svg"
				}
			],
			"activitybar": [
				{
					"id": "sideBarViewContainer",
					"title": "ImmyBot",
					"icon": "src/immybot.svg",
					"contextualTitle": "ImmyBot"
				}
			]
		},
		"cssVariables": [
			{
				"id": "immybot-colors",
				"description": "ImmyBot Extension Colors",
				"links": [{
					"id": "colors.css",
					"path": "./src/web/colors.css"
				}]
			}
		]
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"debug": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=.",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^20.14.9",
		"@types/vscode": "^1.73.0",
		"@types/webpack-env": "^1.16.2",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vscode/test-web": "^0.0.22",
		"assert": "^2.0.0",
		"eslint": "^8.26.0",
		"mocha": "^11.1.0",
		"path-browserify": "^1.0.1",
		"process": "^0.11.10",
		"ts-loader": "^9.2.5",
		"typescript": "^5.4.2",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"monaco-languageclient": "^8.6.0",
		"vscode-languageclient": "^9.0.1",
		"vscode-ws-jsonrpc": "^3.3.2",
		"ws": "^8.17.1"
	}
}
