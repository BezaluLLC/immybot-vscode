{
	"name": "immybot",
	"displayName": "immybot",
	"description": "Edit ImmyBot scripts from VS Code",
	"version": "0.0.2",
	"publisher": "ImmyBot",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/immense/immybot-vscode",
	"engines": {
		"vscode": "^1.74.0",
		"node": ">=20.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:powershell"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "metascript",
				"extensions": [
					".ps1",
					".psm1"
				]
			}
		],
		"views": {
			"explorer": [],
			"sideBarViewContainer": [
				{
					"id": "immybot-signin",
					"name": "Sign In",
					"when": "!immybot:authenticated",
					"icon": "$(sign-in)"
				},
				{
					"id": "immybot-localrepo",
					"name": "⭐ MY SCRIPTS ⭐",
					"when": "immybot:authenticated",
					"icon": "$(folder)"
				},
				{
					"id": "immybot-globalrepo",
					"name": "⭐ GLOBAL SCRIPTS ⭐",
					"when": "immybot:authenticated",
					"icon": "$(folder)"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "immybot-signin",
				"contents": "Sign in to ImmyBot\n[Sign In](command:immybot.signIn)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "immybot.refresh",
					"when": "immybot:authenticated",
					"group": "navigation@1"
				},
				{
					"command": "immybot.save",
					"when": "immybot:authenticated && editorIsOpen",
					"group": "navigation@2"
				},
				{
					"command": "immybot.discard",
					"when": "immybot:authenticated && editorIsOpen",
					"group": "navigation@3"
				},
				{
					"command": "immybot.createFile",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@1"
				},
				{
					"command": "immybot.createFile",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@1"
				},
				{
					"command": "immybot.deleteFile",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@2"
				},
				{
					"command": "immybot.deleteFile",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@2"
				},
				{
					"command": "immybot.signOut",
					"when": "immybot:authenticated && view == immybot-localrepo",
					"group": "overflow@3"
				},
				{
					"command": "immybot.signOut",
					"when": "immybot:authenticated && view == immybot-globalrepo",
					"group": "overflow@3"
				}
			],
			"commandPalette": [
				{
					"command": "memfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.addFile",
					"when": "workbenchState == workspace"
				}
			]
		},
		"commands": [
			{
				"command": "immybot.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "immybot.signIn",
				"title": "Sign In"
			},
			{
				"command": "immybot.signOut",
				"title": "Sign Out",
				"icon": "$(sign-out)"
			},
			{
				"command": "immybot.refresh",
				"title": "Refresh Scripts",
				"icon": "$(refresh)"
			},
			{
				"command": "immybot.save",
				"title": "Save",
				"icon": "$(save)"
			},
			{
				"command": "immybot.discard",
				"title": "Discard Changes",
				"icon": "$(discard)"
			},
			{
				"command": "immybot.createFile",
				"title": "Create File",
				"icon": "$(add)"
			},
			{
				"command": "immybot.deleteFile",
				"title": "Delete File",
				"icon": "$(trash)"
			},
			{
				"command": "memfs.reset",
				"title": "Delete Files",
				"category": "MemFS"
			},
			{
				"command": "memfs.deleteFile",
				"title": "Delete \"file.txt\"",
				"category": "MemFS"
			},
			{
				"command": "memfs.addFile",
				"title": "Add \"file.txt\"",
				"category": "MemFS"
			}
		],
		"viewsContainers": {
			"panel": [
				{
					"id": "console-view-container",
					"title": "ImmyBot",
					"icon": "immybot.svg"
				}
			],
			"activitybar": [
				{
					"id": "sideBarViewContainer",
					"title": "ImmyBot",
					"icon": "src/immybot.svg",
					"contextualTitle": "ImmyBot"
				}
			]
		},
		"cssVariables": [
			{
				"id": "immybot-colors",
				"description": "ImmyBot Extension Colors",
				"links": [
					{
						"id": "colors.css",
						"path": "./src/web/colors.css"
					}
				]
			}
		],
		"configuration": {
			"title": "ImmyBot",
			"properties": {
				"immybot.instanceUrl": {
					"type": "string",
					"default": "",
					"description": "The URL of your ImmyBot instance (e.g., https://your-tenant.immy.bot)",
					"pattern": "^https?://.*",
					"patternErrorMessage": "Instance URL must be a valid HTTP or HTTPS URL"
				},
				"immybot.autoSignIn": {
					"type": "boolean",
					"default": false,
					"description": "Automatically attempt sign-in when the extension starts (useful for testing)"
				}
			}
		}
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"debug": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=.",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "oxlint --deny-warnings -D no-console src && vite build",
		"package-web": "vite build --mode production",
		"lint": "oxlint --deny-warnings -D no-console src",
		"lint:fix": "oxlint --fix src"
	},
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^20.14.9",
		"@types/vscode": "^1.73.0",
		"@types/ws": "^8.5.10",
		"@vscode/test-web": "^0.0.22",
		"assert": "^2.0.0",
		"jiti": "^2.5.1",
		"mocha": "^11.1.0",
		"oxlint": "^0.9.8",
		"path-browserify": "^1.0.1",
		"process": "^0.11.10",
		"typescript": "^5.4.2",
		"typescript-eslint": "^8.15.0",
		"vite": "^7.1.4",
		"vite-plugin-node-polyfills": "^0.24.0"
	},
	"dependencies": {
		"monaco-languageclient": "^8.6.0",
		"vscode-languageclient": "^9.0.1",
		"vscode-ws-jsonrpc": "^3.3.2",
		"ws": "^8.17.1"
	}
}
